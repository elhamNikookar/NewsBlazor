@model IEnumerable<Blazor.Model.DTOs.Newses.NewsDTO>
@using CommonLayer;



@if (Model != null && Model.Any())
{
    <div class="slider">
        <ul class="slides">
            @foreach (var item in Model.Select((n, index) => new { News = n, Index = index }))
            {
                <li style="display:@(item.Index == ViewBag.CurrentSlide ? "block" : "none"); width: 508px; margin-left: 8px;">
                    <div class="item">
                        <figure>
                            <img class="news-image" src="@StaticDetail.Default_Src_News_Image/@item.News.ImageName" alt="@item.News.Title">
                            <figcaption class="gradient-fig"></figcaption>
                            <figcaption class="desc-fig">
                                <h3>@item.News.Title</h3>
                                <span><i class="fa fa-clock-o"></i> @item.News.CreateDate.GetTimeAgo()</span>
                            </figcaption>
                        </figure>
                    </div>
                </li>
            }
        </ul>
    </div>

    <div class="controls">
        <button class="prev" onclick="changeSlide(-1)">&#10094;</button>
        <button class="next" onclick="changeSlide(1)">&#10095;</button>
    </div>
}
else
{
    <p>تصویری برای نمایش وجود ندارد.</p>
}


<script>
    var currentSlide = 0;

    function changeSlide(direction) {
        currentSlide = (currentSlide + direction + @Model.Count()) % @Model.Count();
        document.querySelectorAll(".slides li").forEach((slide, index) => {
            slide.style.display = index === currentSlide ? "block" : "none";
        });
    }

    setInterval(function () {
        changeSlide(1);
    }, 5000);
</script>




